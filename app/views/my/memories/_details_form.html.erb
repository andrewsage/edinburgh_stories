<%= form.input :title, input_html: {class: 'form-control'} %>
<%= form.input :area_id, as: :select, collection: Area.all, input_html: {class: 'form-control'} %>
<%= form.input :location, input_html: {class: 'form-control'} %>
<%= form.input :year, input_html: {class: 'form-control', placeholder: "no earlier than #{Memory.furthest_year} please"} %>
<%= form.input :month, as: :select, collection: month_names, include_blank: false, input_html: {class: 'form-control'} %>
<%= form.input :day, as: :select, collection: (1..31).to_a, input_html: {class: 'form-control'} %>
<%= form.input :description, as: :text, input_html: {class: 'form-control'} %>
<%= form.input :attribution, input_html: {class: 'form-control'} %>
<%= form.input :tag_list, label: 'What terms might people use to search for this?', input_html: {class: 'form-control', placeholder: 'separate search terms with commas'} %>
<%= form.association :categories, as: :check_boxes %>
